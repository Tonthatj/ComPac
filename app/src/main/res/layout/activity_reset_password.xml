<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangy4.compac.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/Email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="RetrieveSecurityQuestion"
            android:text="Retrieve Security Question"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="90dp" />

        <TextView
            android:id="@+id/SecQuesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecurityQuestion"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="160dp" />

        <EditText
            android:id="@+id/Answer_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Answer"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="209dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/Back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="320dp" />

            <Button
                android:id="@+id/Reset_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="validateAnswer"
                android:text="Submit"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="320dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
